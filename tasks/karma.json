{
  "options": {
    "frameworks": [
      "mocha",
      "chai",
      "chai-as-promised",
      "sinon-chai"
    ],
    "browsers": [
      "PhantomJS"
    ],
    "reporters": [
      "story"
    ],
    "autoWatch": false,
    "singleRun": false,
    "logLevel": "info"
  },
  "continuous": {
    "options": {
      "singleRun": true,
      "files": ["<%= test_deps %>", "<%= src_files %>", "<%= test_files %>"],
      "preprocessors": {
        "./lib/**/*.js": "coverage"
      },
      "reporters": [
        "story",
        "coverage"
      ],
      "coverageReporter": {
        "reporters": [
          {
            "type": "lcov",
            "dir": "coverage/"
          },
          {
            "type": "text-summary"
          }
        ]
      }
    }
  },
  "continuous-min": {
    "options": {
      "singleRun": true,
      "files": ["<%= test_deps %>", "<%= min %>", "<%= test_files %>"]
    }
  },
  "dev": {
    "options": {
      "browsers": [
        "Chrome"
      ],
      "background": true,
      "files": ["<%= test_deps %>", "<%= src_files %>", "<%= test_files %>"],
      "preprocessors": {
        "./lib/*.js": "coverage"
      },
      "reporters": [
        "story",
        "coverage"
      ],
      "coverageReporter": {
        "reporters": [
          {
            "type": "lcov",
            "dir": "coverage/"
          },
          {
            "type": "html",
            "dir": "coverage/"
          },
          {
            "type": "text-summary"
          }
        ]
      }
    }
  },
  "unstable-dev": {
    "options": {
      "browsers": [
        "Chrome"
      ],
      "background": true,
      "files": ["<%= test_deps_unstable %>", "<%= src_files %>", "<%= test_files %>"]
    }
  },
  "unstable-continuous": {
    "options": {
      "browsers": [
        "PhantomJS"
      ],
      "singleRun": true,
      "files": ["<%= test_deps_unstable %>", "<%= src_files %>", "<%= test_files %>"]
    }
  },
  "scratch": {
    "options": {
      "background": true,
      "files": ["<%= test_deps %>", "<%= main %>", "./test/scratch/scratch.spec.js'"]
    }
  }
}
