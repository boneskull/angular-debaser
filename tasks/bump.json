{
  "options": {
    "files": [
      "package.json",
      "bower.json"
    ],
    "updateConfigs": [
      "pkg"
    ],
    "commit": true,
    "commitMessage": "Release v%VERSION%",
    "commitFiles": [
      "package.json",
      "bower.json",
      "<%= pkg.main %>",
      "<%= pkg.min %>",
      "<%= pkg.map %>",
      ".docs/**"
    ],
    "createTag": true,
    "tagName": "v%VERSION%",
    "tagMessage": "Version %VERSION%",
    "push": false,
    "gitDescribeOptions": "--tags --always --abbrev=1 --dirty=-d"
  }
}
